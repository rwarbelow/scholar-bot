<h1>All Students</h1>
<%= link_to 'New Student', new_admin_student_path %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Grade</th>
      <th>Name</th>
      <th>Email</th>
      <th>ScholarBot Login</th>
      <th>Dob</th>
      <th>Gender</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id_num %></td>
        <td><%= student.grade %></td>
        <td><%= link_to "#{student.last_name}, #{student.first_name}", admin_student_path(student) %></td>
        <td><%= student.email %></td>
        <td><%= student.username %></td>
        <td><%= student.dob %></td>
        <td><%= student.gender %></td>
        <td data-toggle="modal" data-target="#myModal">Change Password</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
