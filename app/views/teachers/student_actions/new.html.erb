<h3>New Action</h3>

<%= form_for(@student_action, url: teachers_course_student_actions_path, method: :post) do |f| %>
  <% if @student_action.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student_action.errors.count, "error") %> prohibited this student action from being saved:</h2>

      <ul>
      <% @student_action.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.select(:enrollment_id, @course.enrollments.map { |enrollment| ["#{enrollment.student.full_name}", enrollment.id] }, {}, class: "chosen-select") %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, :order => [:month, :day, :year] %>
  </div>
  <div class="field">
    <%= f.label :action_id %><br>
    <%= f.select(:action_id, Action.all.map { |action| ["#{action.name}", action.id] }, {}, class: "chosen-select") %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', teachers_course_student_actions_path(@course) %> |
